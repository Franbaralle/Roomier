{
  "name": "backend",
  "version": "1.0.0",
  "description": "Roomier Backend API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development node app.js",
    "prod": "NODE_ENV=production node app.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop roomier-api",
    "pm2:restart": "pm2 restart roomier-api",
    "pm2:logs": "pm2 logs roomier-api",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "pm2": "^6.0.14",
    "resend": "^6.6.0",
    "streamifier": "^0.1.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^11.0.1",
    "supertest": "^6.3.4"
  }
}
