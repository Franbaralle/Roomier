# Configuración del servidor
PORT=3000
NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/flutter_auth

# JWT
JWT_SECRET=tu_clave_secreta_super_segura_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion

# CORS
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cloudinary (para almacenamiento de imágenes)
# Obtén estas credenciales de tu dashboard en cloudinary.com
# 1. Regístrate en https://cloudinary.com
# 2. Ve a Dashboard > Product Environment > API Keys
# 3. Copia "API environment variable" (opción más fácil)

# OPCIÓN 1 (Recomendada): Una sola variable con todo
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# OPCIÓN 2 (Alternativa): Variables separadas
# CLOUDINARY_CLOUD_NAME=your_cloud_name_here
# CLOUDINARY_API_KEY=your_api_key_here
# CLOUDINARY_API_SECRET=your_api_secret_here
